	<div id="reports-wrapper">
		<h2>Reports</h2>
			<div id="reports">
			<% @reports.reverse.each do |t| %>
				<div id="reports-individual">
					<h3 class="report-title"> <%= t.title %> </h3>
					<p class="time-posted">Posted: <%= time_ago_in_words(t.created_at) %> ago</p>
					<p class="report-body"> <%= t.body.truncate_words(5) %> </p>
					<%= link_to "Report details", report_path(t) %>

					<% if t.flag_report == false || t.flag_report == nil %>
						<%= form_for t, remote: true do |z| %>
							<%= z.hidden_field :flag_report , value: true %>
							<%= z.submit "⚑ Flag as Inappropriate" %>
						<% end %>
					<% else %>
						<br>
						<button class="flagged">This report has been flagged for removal</button>
					<% end %>

					<% if current_user %>
						<%= link_to "Edit Report", edit_report_path(t) %>
						<%= link_to "Delete Report", t, method: :delete %>
					<% end %>

					<h4>Comments</h4>
						<% t.comments.each do |f| %>
							<p>From: <%= f.name %></p>
							<p>Comment: <%= f.body %></p>

							<% if f.flag == false || f.flag == nil %>
								<%= form_for f, remote: true do |f| %>
									<%= f.hidden_field :flag , value: true %>
									<%= f.submit "⚑ Flag as Inappropriate" %>
								<% end %>
							<% else %>
								<button class="flagged">This comment has been flagged for removal</button>
							<% end %>
						<% end %>
					<%= form_for @comment do |c| %>
						<%= c.text_field :name, placeholder: "Your name (optional)" %>
						<%= c.text_field :body, placeholder: :comment_on_report %>
						<%= c.hidden_field :report_id, value: t.id %>
						<%= c.hidden_field :flag, value: false %>
						<%= c.submit "Comment" %>
					<% end %>
				</div>
			<% end %>
		</div>
	</div>


	<div id="report_outer_modal">
